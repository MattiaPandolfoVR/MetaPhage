/*
 * -------------------------------------------------
 *  metaphage base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

params {
  config_profile_name = 'Base profile'
  config_profile_description = 'Standard profile for working with the pipeline'
  // resources
  max_cpus = 8
  max_memory = 32.GB
  max_time = 96.h
  // output dirs
  params.outdir = "./output"
  params.temp_dir = "./tmp"
  // inputs
  singleEnd = false
  readPaths = './datasets/base'
}

process {
  cpus   = 8
  memory = 32.GB
  time   = 96.h
}

