params {
  config_profile_name = 'Base'
  config_profile_description = 'YOU CAN COPY THIS TEMPLATE AND MANUALLY CREATE YOUR CONFIG'

  // INPUT PATHS
  readPath = "$projectDir/datasets"             // DATASET/FOLDER/PATH
  metaPath = "$readPath/metadata"               // METADATA/FOLDER/PATH
  fqpattern = "_{1,2}.fastq.gz"                 / FASTQ FW/RV PATTERN
  dbPath = "/g100_work/IscrC_MPhage/db"         // DB/FOLDER/PATH 

  // OUTPUT PATHS
  outdir = "$projectDir/MetaPhage_Output"       // OUTPUT/DIRECTORY/PATH
  temp_dir = "$projectDir/tmp"                  // TMP/DIRECTORY/PATH

  // RUN VARIABLES
  run_name = "base"                             // SET NAME OF YOUR RUN
  metadata = true                               // SET FALSE IF NO METADATA ARE AVAILABLE. THIS WILL SKIP MANY OUTPUTS
  virome_dataset = true                         // SET TRUE IF THE DATASET IS AN ENRICHED VIROME
  singleEnd = false                             // SET TRUE IF YOU HAVE SINGLE-END SAMPLES
  minlen = 3000                                 // SET MINIMAL LENGTH FOR VIRAL CONTIGS 
  sum_viol_var = "variable_single_violins"      // "METADATA/VARIABLE/FOR/SINGLE_VIOLIN_PLOTS"
  heatmap_var = "variable_heatmap"              // "METADATA/VARIABLE/FOR/HEATMAP"
  alpha_var1 = "variable_alpha_diversity1"      // "METADATA/VARIABLE1/FOR/ALPHA_DIVERSITY"
  alpha_var2 = "variable_alpha_diversity2"      // "METADATA/VARIABLE1/FOR/ALPHA_DIVERSITY"
  beta_var = "variable_beta_diversity"          // "METADATA/VARIABLE/FOR/BETA_DIVERSITY"
  violin_var = "variable_total_violins"         // "METADATA/VARIABLE/FOR/TOTAL_VIOLIN_PLOT"

  // CHANGE ONLY IF USING CUSTOM DATABASES!
  // TOOL DATABASES
  mod_phix = "phiX174"                          // SET NAME OF PHIX DB
  mod_kraken2 = "miniBAV"                       // SET NAME OF KRAKEN2 DB
  mod_phigaro = "standard"                      // SET NAME OF PHIGARO DB
  mod_vibrant = "legacy"                        // SET NAME OF VIBRANT DB
  mod_virsorter2 = "virsorter2"                 // SET NAME OF VIRSORTER2 DB
  mod_checkv = "checkv-db-v1.2"                 // SET NAME OF CHECKV DB
  mod_vcontact2 = "Jun2022"                     // SET THE VCONTACT2 DB DIRECTORY NAME (MANY DIRECTORY PER INPHARED MONTH UPDATE)
  vcontact2_file_head = "1Jun2022_vConTACT2_"   // SET THE HEADER OF VCONTACT2 FILES RELATED TO THE DATABASE MONTHLY VERSION (IF USING INPHARED)
}