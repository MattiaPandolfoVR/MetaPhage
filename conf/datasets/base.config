params {
  config_profile_name = 'Base'
  config_profile_description = 'Profile to test MetaPhage on your base dataset'

  // INPUT PATHS
  readPath = "PATH/TO/DATASET/FOLDER"
  metaPath = "$readPath/metadata"
  dbPath = "PATH/TO/DB/FOLDER"
  metadata = true
  virome_dataset = false
  singleEnd = false
  sum_viol_var = "METADATA/VARIABLE/FOR/SINGLE_VIOLIN_PLOTS"
  heatmap_var = "METADATA/VARIABLE/FOR/HEATMAP"
  alpha_var1 = "METADATA/VARIABLE1/FOR/ALPHA_DIVERSITY"
  alpha_var2 = "METADATA/VARIABLE1/FOR/ALPHA_DIVERSITY"
  beta_var = "METADATA/VARIABLE/FOR/BETA_DIVERSITY"
  violin_var = "METADATA/VARIABLE/FOR/TOTAL_VIOLIN_PLOT"

  // OUTPUT DIRS
  outdir = "PATH/TO/OUTPUT/FOLDER"
  temp_dir = "PATH/TO/OUTPUT_TEMPORARY/FOLDER"
}

