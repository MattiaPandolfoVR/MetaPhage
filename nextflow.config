params {
  max_cpus = 42
  max_memory = 366.GB
  max_time = 24.h

  // CONFIG VARIABLES
  // Trimming
  singleEnd = false
  skip_qtrimming = false
  adapter_forward = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCA"
  adapter_reverse = "AGATCGGAAGAGCGTCGTGTAGGGAAAGAGTGT"
  mean_quality = 15
  trimming_quality = 15
  keep_phix = false
  mod_phix = "phiX174"
  file_phix_alone = "-"

  // microbial taxonomy
  skip_bacterial_taxo = false
  skip_kraken2 = false
  mod_kraken2 = "miniBAV"
  file_kraken2_db = "-"
  skip_krona = false

  // Assembly
  skip_megahit = false
  skip_metaquast = false

  // Phage-mining
  skip_mining = false
  skip_vibrant = false
  mod_vibrant = "legacy"
  file_vibrant_db = "-"
  skip_phigaro = false
  mod_phigaro = "standard"
  file_phigaro_config = "-"
  skip_virsorter = false
  mod_virsorter = "legacy"
  file_virsorter_db = "-"
  skip_virfinder = false

  // Dereplication
  skip_dereplication = false
  minlen = 3000

  // Viral Taxonomy (vContact2)
  skip_viral_taxo = false
  skip_vcontact2 = false
  mod_vcontact2 = "Nov2021" //Set the vcontact2 database directory name
  vcontact2_file_head = "1Nov2021_vConTACT2_" //set the header of files of the vcontact2 database you are using (if using inphared)
  file_vcontact2_db = "-"
  skip_graphanalyzer = false

  // Plots & Report
  metadata = false
  sum_viol_var = "-"
  heatmap_var = "-"
  alpha_var1 = "-"
  alpha_var2 = "-"
  beta_var = "-"
  violin_var = "-"
  skip_miner_comparison = false
  skip_summary = false
  skip_taxonomy_table = false
  skip_heatmap = false
  skip_alpha_diversity = false
  skip_beta_diversity = false
  skip_violin_plots = false
  skip_report = false
}

