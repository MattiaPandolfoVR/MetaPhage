/* Default config options for all environments. */

manifest {
  name = 'MetaPhage'
  mainScript = 'main.nf'
  nextflowVersion = '>=20.07.1'
  version = '1.0.0'
}

workDir = "/g100_scratch/userexternal/mpandolf/work"

profiles {
  base { includeConfig './conf/base.config'}
}

